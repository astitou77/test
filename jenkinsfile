pipeline {
    agent any

    environment {
        GIT_SSH_COMMAND = 'ssh -o StrictHostKeyChecking=no'
        REPO_URL = 'git@github.com:astitou77/test.git'
        CREDENTIALS_ID = 'Adnane_Jenkins_ID_2'
        ARTIFACTORY_SERVER = 'http://172.16.25.133:8081/artifactory'
        ARTIFACTORY_REPO = 'adnane-maven-key'
        WAR_FILE = 'target/HelloWorld.war'
    }

    stages {
        stage('Clone Repository') {
            steps {
                script {
                    git branch: 'main', url: "${REPO_URL}", credentialsId: "${CREDENTIALS_ID}"
                }
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }


        stage('Deploy to Application Server') {
            steps {
                script {
                    // Replace this with your actual deployment logic
                    sh 'ssh astitou@172.16.25.140 "/home/astitou/Desktop/apache-tomcat-9.0.89-HelloWorld/shutdown.sh"'
		    sh 'scp ${WAR_FILE} astitou@172.16.25.140:/home/astitou/Desktop/apache-tomcat-9.0.89-HelloWorld/webapps'
                    sh 'ssh astitou@172.16.25.140 "/home/astitou/Desktop/apache-tomcat-9.0.89-HelloWorld/startup.sh"'
                }
            }
        }
    }

    post {
        success {
            echo 'Build and Deployment succeeded!'
        }
        failure {
            echo 'Build or Deployment failed.'
        }
    }
}
